#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;

int text_size = 0;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::LoginClick(TObject *Sender)
{
    Login->Text = "";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::PasswordClick(TObject *Sender)
{
      Password->Text = "";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::PasswordContextPopup(TObject *Sender, TPoint &MousePos, bool &Handled)

{
	  text_size++;
	  AnsiString pass = "";
	  for(int i = 0; i < text_size; i++){
		  pass += "*";
		  Password->Text = pass;
	  }
}
//---------------------------------------------------------------------------
